        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>
    <style name="Theme.GukhanWikiAppAndroid.WikiPage.H4">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>
    <style name="Theme.GukhanWikiAppAndroid.WikiPage.H5">
        <item name="android:textStyle">bold</item>
